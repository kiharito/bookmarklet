javascript:const PROJECT_NAME="kiharito",bookTitle=document.getElementById("productTitle").textContent.trim(),pageTitle=`『${bookTitle}』`,imageSrc=document.getElementById("imgTagWrapperId").querySelector("img").getAttribute("src"),pageBodyArray=[`[${imageSrc}]`,"著者"];document.getElementById("bylineInfo").querySelectorAll(".author").forEach((function(e){e.textContent.includes("(著)")&&pageBodyArray.push(`\t[${e.querySelector("a").textContent.trim()}]`)}));const bookInfo=document.getElementById("detailBulletsWrapper_feature_div").querySelector("#detailBullets_feature_div");Array.from(bookInfo.children).forEach((function(e){if(e.textContent.includes("発売日")){const t=e.textContent.trim().match(/(\d{4})\/(\d{1,2})\/(\d{1,2})/),o=`${t[1]}-${("00"+t[2]).slice(-2)}-${("00"+t[3]).slice(-2)}`;pageBodyArray.push("発売日",`\t${o}`)}})),pageBodyArray.push("読了日","\t","","メモ","\t","","気付き・感想","\t","","#読書記録");const pageBody=pageBodyArray.join("\n");window.open(`https://scrapbox.io/kiharito/${encodeURIComponent(pageTitle)}?body=${encodeURIComponent(pageBody)}`);
